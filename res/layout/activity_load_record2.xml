<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/top_zcjl" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@drawable/selectdept_bottom" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主车(牌号)"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  > >  " />

            <TextView
                android:id="@+id/tv_CarNo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主车牌"
                android:textColor="#ffff0000"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际吨位"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  > >  " />

            <EditText
                android:id="@+id/ed_sjdw"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="text"
                android:textSize="20sp" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView15"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件        数"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/TextView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  > >  " />

            <EditText
                android:id="@+id/ed_js"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="text"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" >

            <TextView
                android:id="@+id/TextView08"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_saveimagesMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffff0000" />

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/ImV_pic1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/bt_saveallpci"
        android:layout_below="@+id/tableLayout1"
        android:layout_marginTop="14dp"
        android:src="@drawable/pszp" />

    <ImageView
        android:id="@+id/ImV_pic3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/bt_saveallpci"
        android:layout_below="@+id/ImV_pic2"
        android:layout_marginTop="17dp"
        android:src="@drawable/pszp" />

    <ImageView
        android:id="@+id/ImV_pic4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/ImV_pic2"
        android:layout_below="@+id/ImV_pic2"
        android:layout_marginTop="16dp"
        android:src="@drawable/pszp" />

    <ImageView
        android:id="@+id/bt_saveallpci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImV_pic3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/bt_save" />

    <ImageView
        android:id="@+id/ImV_pic2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/bt_saveallpci"
        android:layout_alignTop="@+id/ImV_pic1"
        android:src="@drawable/pszp" />

</RelativeLayout>