<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hooyo.asd"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Login"
            android:label="@string/title_activity_maintt" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IndexPage"
            android:label="林森物流" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".ListItemActivity"
            android:label="@string/title_activity_list_item" >
        </activity>
        <activity
            android:name="com.ljlistivew.activity.LJListViewActivity"
            android:label="业务信息列表" >
        </activity>
        <activity
            android:name=".ListCarsActivity"
            android:label="@string/title_activity_list_cars" >
        </activity>
        <activity
            android:name=".CarInfoActivity"
            android:label="@string/title_activity_car_info" >
        </activity>
        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
        <activity
            android:name=".CarInfoModifyActivity"
            android:label="@string/title_activity_car_info_modify" >
        </activity>
        <activity
            android:name=".LoadRecordActivity"
            android:label="@string/title_activity_load_record" >
        </activity>
        <activity
            android:name=".PicShowActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_pic_show"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".ShowPictrueActivity"
            android:label="@string/title_activity_show_pictrue" >
        </activity>
        <activity
            android:name=".GetDriverActivity"
            android:label="@string/title_activity_get_driver"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".GetCarActivity"
            android:label="@string/title_activity_get_car" 
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>
